            </div> <!-- end of col-10 offset-1 -->
        </div> <!-- end of row-->

        <div class="row">
            <div class="col-12">
                <footer class="bg-dark text-white p-3 text-center">
                    Copyright &copy; All right reserved to SSJB.hs.kr
                </footer>
            </div>
        </div>

        <div id="popup">
            <div class="inner">
                <div class="row">
                    <div class="col-8 offset-2">
                        <h2 class="title text-center my-4">로그인</h2>
                        <input id="nickname" class="form-control mb-2" type="text"
                                placeholder="사용할 닉네임을 입력하세요">
                        <button class="btn btn-block btn-primary" id="loginBtn">
                            로그인
                        </button>
                    </div>
                </div>
                
            </div>
        </div>
    </div> <!-- end of container -->
</body>
