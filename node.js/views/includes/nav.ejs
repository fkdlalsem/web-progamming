<div class="row">
    <div class="col-12">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">수정과 홈</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/chatroom">채팅방 입장</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/board/write">게시판</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/corona">코로나 현황</a>
                    </li>
                </ul>
                <div class="button-box">
                    <% if (locals.user) { %>
                        <button class="btn btn-outline-primary">
                            <%= locals.user.name %>
                        </button>
                        <a class="btn btn-outline-danger" href="/logout">로그아웃</a>
                    <% } else { %>
                        <a class="btn btn-outline-primary" href="/login">로그인</a>
                        <a class="btn btn-outline-success" href="/register">회원가입</a>
                    <% } %>
                </div>
            </div>
        </nav>
    </div>

    <% if (locals.flashMsg) { %>
        <div class="col-12">
            <div class="alert <%= locals.flashMsg.c %>">
                <%= locals.flashMsg.msg %>
            </div>
        </div>
        <script>
            setTimeout(()=>{
                document.querySelector("#msgBar").remove();
            },3000);
        </script>
    <% } %>
</div>
